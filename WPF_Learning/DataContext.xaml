<Window x:Class="WPF_Learning.DataContext"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Learning"
        mc:Ignorable="d"
        Title="EventyDelegatyWindow" Height="350" Width="500">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="2">
            <Button x:Name="ButtonSelect" Margin="2" Padding="2" Click="ButtonSelect_Click">
                Select    
            </Button>
            <Button x:Name="ButtonDraw" Margin="2" Padding="2" Click="ButtonDraw_Click">
                Draw
            </Button>
        </StackPanel>
        <InkCanvas EditingMode="{Binding Path=EditingMode}">
            
        </InkCanvas>
    </DockPanel>
</Window>
