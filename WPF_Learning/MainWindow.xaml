<Window x:Class="WPF_Learning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Learning"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,10,0.4,-0.2">
        <Button x:Name="add" Margin="10,10,10,10" Click="Add_Click" VerticalAlignment="Top">
            <Grid>
                <Image Margin="20,20,20,20" Source="images\base_image.png" Height="128"/>
                <Label x:Name ="label_new" Content="Label" Margin="10,10,10,10" VerticalAlignment="Bottom"/>
            </Grid>
        </Button>

        <TextBlock x:Name="textBlock" Margin="10,186,10,10">

        </TextBlock>
    </Grid>
</Window>
